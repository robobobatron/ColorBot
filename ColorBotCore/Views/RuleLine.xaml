<UserControl x:Class="ColorBotCore.Views.RuleLine"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ColorBotCore.Views"
             mc:Ignorable="d" 
			 d:DesignHeight="100" d:DesignWidth="500">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition Width="5*"/>
		</Grid.ColumnDefinitions>
		<Viewbox Grid.Column="0">
			<TextBlock x:Name="RuleNumber" Foreground="White" Text="1."/>
		</Viewbox>
		<Viewbox Grid.Column="1">
			<TextBlock x:Name="RuleText" Foreground="White" Text="Place Holder Text" Margin="2 2 2 2"/>
		</Viewbox>
	</Grid>
</UserControl>
